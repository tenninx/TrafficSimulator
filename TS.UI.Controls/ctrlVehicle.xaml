<UserControl x:Class="TS.UI.Controls.ctrlVehicle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Name="objVehicle"
             d:DesignHeight="20" d:DesignWidth="20">
    <Grid>
        <Ellipse x:Name="objEllipse" Width="20" Height="20" Fill="Magenta" VerticalAlignment="Center" HorizontalAlignment="Center" />
        <TextBlock x:Name="objSpeed" Text="{Binding ElementName=objVehicle, Path=Speed}" FontSize="13" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" />
    </Grid>
</UserControl>
